<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/inicio"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/d">

    <!--<ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/logo"
        />-->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/logo"
        android:id="@+id/imagen"
        />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/c"
            android:layout_below="@+id/d"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ANDROID NATURAL es un espacio en el cual puedes compartir y ayudar al medio ambien, esto mediante la publicacion de articulos, materiales, dispositivos o  residuos que tengas en tu casa y quieras desaserte de ellos, ya que aqui encontraras a diferentes personas de tu ciudad que hacen uso de estos residuos, de tal forma que no contaminen al medio ambiente y les ayuden economicamente con la produccion de productos hechos especialmente de basura..."
                android:textColor="@color/colorWithe"
                android:textStyle="bold"
                />

        </LinearLayout>

    <!--Boton= Registrar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

    <Button
        android:id="@+id/register_btn"
        android:text="Registrar"
        android:background="@drawable/diseno_boton2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_btn"
        android:layout_weight="1"
        />

    <!--Boton= Login-->
    <Button
        android:id="@+id/login_btn"
        android:text="Iniciar Sesion"
        android:background="@drawable/diseno_boton2"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>